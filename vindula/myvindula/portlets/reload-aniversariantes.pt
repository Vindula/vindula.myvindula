		<tal:def define="view python:context.restrictedTraverse('@@reload-aniversariantes');
						 results view/birthdaysToday;
						 
						 Batch python:modules['Products.CMFPlone'].Batch;
	                       b_size request/quantidade | string:0;
	                       b_start python:0;
	                       b_start request/b_start | b_start;
						   
						   batch python:Batch(results, int(b_size), int(b_start));">

			<input type="hidden" name="max_result" id="max_result" tal:attributes="value python:len(results)">
			
			<tal:results tal:repeat="obj batch">
				
				<div id="boxPortlet" tal:define="i repeat/obj/end;
												 details python: view.get_details_user(obj) or None;"
						tal:attributes="class python:view.getEnd(i);">
					<div class="row">
						<tal:cond condition="view/show_picture">
							<div class="portlet-user-image">
								<a tal:attributes="href string:${here/portal_url}/myvindulalistuser?user=${obj/username|nothing}">
									<img src="defaultUser.png"
										  alt="" border="0"
										    width="35"
											height="49"
											tal:attributes="src string: ${context/portal_url|nothing}/user-image?username=${obj/username|nothing};
											alt obj/name|nothing;
											title obj/name|nothing;" />
								</a>
							</div>
						</tal:cond>
						<div class="portlet-user-info" tal:attributes="class python: not view.show_picture and 'portlet-user-info-larg' or 'portlet-user-info'">
							<h4>
								<a tal:attributes="href string:${here/portal_url}/myvindulalistuser?user=${obj/username|nothing}"
									tal:content="obj/name|obj/username|nothing">func</a>
							</h4>
								<p>
									<tal:rep repeat="detail details" condition="details">
										<span tal:condition="python: detail['label'] and detail['content']" tal:content="string: ${detail/label}: "> </span>
										<span tal:condition="detail/content" tal:content="detail/content"> </span>
										<br tal:condition="python: detail['label'] or detail['content']">
									</tal:rep>
								</p>
						</div>
					</div>
				</div>
			</tal:results>
			<!--div class="titulo_info_boxTipo2 aling-right">
				<h4 tal:define="x python:len(results)>int(quant)" tal:condition="x">
					<a tal:attributes="href string:${here/portal_url}/myvindulalistbirthdays?filtro=${view/get_type_search|nothing}">Mais...</a>
				</h4>
			</div-->
			
			<div class="visualClear"></div>
			<tal:notresults tal:condition="not: view/birthdaysToday">
				<h4>N&atilde;o h&aacute; aniversariantes nos pr&oacute;ximos dias.</h4>
			</tal:notresults>

		</tal:def> 