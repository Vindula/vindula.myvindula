<div class="boxTipo2" tal:define="view view/data">
	<div class="topoBoxTipo2">
		<h2 tal:content="view/title">portlet Ramais</h2>
	</div>
	<div class="contBoxTipo2">
		<div id="busca-portlet">
			<form action="" method="post">
		    	<h4>Nome:</h4><input type="text" name="title" size="26" tal:attributes="value python: request.get('title', '')"/>
		        <h4>Ramal:</h4><input type="text" name="ramal" size="26" tal:attributes="value python: request.get('ramal', '')"/>
		          <h4>Departamento:</h4>
		          <select size="1" id="departamento" name="departamento" style="width:100%;">
		            <option value="0" >Todos ...</option>
		            <tal:departamentos tal:repeat="item view/list_departamentos">
		                <option tal:define="id_request request/departamento | python:''" 
								tal:attributes="value item/id|nothing;
								selected python: str(id_request)==str(item.id) or default"
								tal:content="item/name|nothing">Marketing 
		                </option>
		            </tal:departamentos>
		          </select>
				  <div class="aling-right"> 
				  	<input type="submit" name="SearchSubmit" value="Buscar" class="context" i18n:attributes="value"/>
				  </div>
     	 	</form>
		    <tal:results tal:define="quant view/get_quantidade_portlet;
									 results view/busca_usuarios;">
				<tal:cond condition="results">									 	
		    		<h4><strong i18n:translate="">Resultados</strong></h4>
			    	<div class="portletItem">
				      <tal:results tal:define="busca python:results[:int(quant)];"
					  			   tal:repeat="obj busca" >
						<div tal:define="i repeat/obj/end" 
						     tal:attributes="class python:view.getEnd(i);">      	
				        	<h4><a tal:attributes="href string:${here/portal_url}/myvindulalistuser?user=${obj/username}"
								   tal:content="obj/name">func</a></h4>
				        	<p><span tal:replace="obj/position|nothing" /><br />
				        	<span tal:replace="obj/departamento/name|nothing" /><br />
				        	<span tal:replace="obj/phone_number|nothing" /><br />
				        	<span tal:replace="obj/email|nothing" /><br />
				      	  </p>
						 </div>
			      	  </tal:results>
					</div>
		    	<div class="titulo_info_boxTipo2">
			        <h4 tal:condition="python:results.count()>int(quant)">
			            <a tal:attributes="href  string:${here/portal_url}/myvindulalistall?title=${request/title|nothing}&ramal=${request/ramal|nothing}&departamento=${request/departamento|nothing}">Mais...</a>
			        </h4>
			    </div>
			    <!--dd class="portletItem odd">
			       <p><strong i18n:translate=""><a href="http://portal.saraiva.com.br/corporativo/geral/servicos/consultas/busca-de-ramais/lista-de-ramais-filiais-editora">Lista de Filiais Editora</a></strong></p>
			       <p><strong i18n:translate=""><a href="http://portal.saraiva.com.br/corporativo/geral/servicos/consultas/busca-de-ramais/lista-de-ramais-lojas-livraria">Lista de Lojas Livraria</a></strong></p>
			    </dd-->
			    
				</tal:cond>
			</tal:results>
		</div>
	</div>
	<div class="rodapeBoxTipo2">
		<img alt="" src="++theme++vindula.themedefault/images/rodapeBoxTipo2.png"/>
	</div>
</div>
