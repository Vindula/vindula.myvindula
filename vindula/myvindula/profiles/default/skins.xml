<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="vindula.myvindula">

 <!-- This list registers the folders that are stored in the skins directory
      of your product (on the filesystem) as Filesystem Directory Views within
      the portal_skins tool, so that they become usable as skin layers.
      -->

 <object name="vindula.myvindula_skins_templates"
    meta_type="Filesystem Directory View"
    directory="vindula.myvindula:skins/vindula.myvindula_skins_templates"/>


 <skin-path name="Vindula Theme" based-on="Sunburst Theme">
  <layer name="vindula.myvindula_skins_templates"
     insert-after="custom"/>
  
 </skin-path>

</object>
