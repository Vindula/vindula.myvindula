<html>
<body metal:use-macro="here/main_template/macros/master">
<metal:block fill-slot="top_slot">
        <tal:dummy tal:define="dummy python:request.set('disable_border',1)" />
</metal:block>
    
    <div metal:fill-slot="content" tal:define="member python:context.portal_membership.getAuthenticatedMember();
									  		   form_data view/load_list | python:{}">
									  	          
	    <div id="content" >
	    	<h2 class="h2title" tal:content="string:Lista dos Aniversariantes do ${view/nome_filtro|nothing}">
	    		Usu&aacute;rios do portal
			</h2>

			<div id="interna" class="userpage">
				<table id="birthdays">
					<tr>
						<td class="value">Nome do Colaborador</td>
						<td class="value">Departamento</td>
						<td class="value">Data de Anivers&aacute;rio</td>
					</tr>
					<tal:rep repeat="item form_data">
						<tr>
							<td class="field">
								<a tal:attributes="href string:${here/portal_url}/myvindulalistuser?user=${item/username}"
								   tal:content="item/name|nothing">Name</a>			
							</td>
							<td class="field">
								<tal:def define="user item/username; departamentos python: view.get_department(user)">
					        		<tal:rep repeat="departamento departamentos">
					        			<span tal:content="departamento/Title">Department</span> |
					        		</tal:rep>
					        	</tal:def>
							</td>
							<td class="field">
								<span tal:content="item/date_birth|nothing">Date</span>
							</td>
						</tr>
					</tal:rep>	
				</table>
			</div>
	    </div>
    </div>    
</body>