<html metal:use-macro="here/main_template/macros/master">
    <head>
        <metal:block fill-slot="top_slot">
            <tal:dummy tal:define="dummy python:request.set('disable_border',1);
                                   disable_column_one python:request.set('disable_plone.leftcolumn',1);
                                   disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
        </metal:block>
    </head>
    <body>
        <div metal:fill-slot="content" >

            <metal:use use-macro="context/@@myvindulapanel/macros/page"/>

            <div id="content" metal:define-macro="page-view">

                <div class="userpage geral_lista_comentarios"
                     tal:define="member python:context.portal_membership.getAuthenticatedMember();
                                 view_myvindula python:context.restrictedTraverse('@@myvindula');
                                 isAnonymous context/portal_membership/isAnonymousUser|python:True;
                                 username python:member.getUserName() or None;">

                    <h2 class="h2title">Suas notificações!</h2>

                    <tal:rep repeat="notificacao python:view_myvindula.get_notificacoes(username)">


                        <div tal:define="user_actor python:view_myvindula.get_prefs_user(notificacao.actor);
                                         obj_action python:view_myvindula.lookupObject(notificacao.content.uid);">


                          <a href="#" tal:attributes="href obj_action/absolute_url|nothing">
                              <div class="clear">
                                  <div class="circle-mark">
                                  </div>
                                  <img class="left" width="50" height="50"
                                       tal:attributes="src string:${here/portal_url}/vindula-api/myvindula/user-picture/photograph/${notificacao/actor}/True">

                                  <div class="left info-updates">
                                      <div>
                                          <strong tal:content="user_actor/name|notificacao/acto|string: "></strong>
                                          <span tal:content="python:view_myvindula.action_social.get(notificacao.action,'')"></span>
                                          <span tal:content="obj_action/Title|string: "></span>

                                          <span tal:content="python:view_myvindula.getTimeAgo(notificacao.get_date_created,'')"></span>
                                      </div>
                                  </div>
                              </div>
                          </a>


                        </div>
                    </tal:rep>

                </div>
            </div>
        </div>
    </body>
</html>