<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
        <metal:block fill-slot="top_slot">
            <tal:dummy tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                                   disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
        </metal:block>
</head>
<body>
   <div metal:fill-slot="content" >
	   <metal:use use-macro="context/@@myvindulapanel/macros/page"/>
       
	   <tal:def define="enable_contentcore context/@@myvindula-conf-userpanel/check_contentcore;
						enable_link python:'minhas-solicitacoes';
						link request/id| enable_link;">	
		    
			<div id="edit-bar" class="custom" style="bottom: 16px;position: relative;"
				 tal:condition="python: enable_contentcore" >
	            
				<h5 class="hiddenStructure"
	                i18n:translate="heading_views">Views</h5>
	
	            <ul class="contentViews"
	                id="content-views"
	                tal:define="view_name view/__name__"
	                i18n:domain="plone">
	                
					<li id="contentview-user_data-personal-data"
	                    	tal:define="selected python:link=='minhas-solicitacoes';"
	                    tal:attributes="class python:selected and 'selected' or 'plain'">
	                    <a href=""
	                       tal:attributes="href string:${context/portal_url}/@@myvindula-contentcore?id=minhas-solicitacoes"
	                       i18n:translate="">
	                        Minhas Solicitações
	                    </a>
	                </li>
					<li id="contentview-user_data-personal-holerite"
		                    tal:define="selected python:link=='gerenciar-solicitacoes'"
		                    tal:attributes="class python:selected and 'selected' or 'plain'">
		                    <a href=""
		                       tal:attributes="href string:${context/portal_url}/@@myvindula-contentcore?id=gerenciar-solicitacoes"
		                       i18n:translate="">
		                        Controle de Solicitações
		                    </a>
		            </li>
					
	            </ul>
	            <div class="contentActions">&nbsp;</div>
	        </div>
			<div id="content" tal:define="macro python:view.getMacro(link)">
				<tal:cond condition="macro">
					<metal:block metal:use-macro="python:path(macro)"/>
				</tal:cond>
			</div>       	
       </tal:def>
    </div>
</body>
</html>
