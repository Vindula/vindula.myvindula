<html>
	<body metal:use-macro="here/prefs_main_template/macros/master">

	  	<div metal:fill-slot="prefs_configlet_content">
	  		
			<h1>Gerenciamento de Usu&aacute;rios</h1>
				<div id="content" tal:define="view_listall python: context.restrictedTraverse('@@myvindulalistall');
		  									  form_data view/load_list | python:{};">
	                           					     
		        	<div id="interna" class="userlist" tal:define="Batch python:modules['Products.CMFPlone'].Batch;
											                       b_size python:20;
											                       b_start python:0;
											                       b_start request/b_start | b_start">
		        		<div id='novo-func'>
		        			<fieldset>
		            			<legend>Adicionar novo Funcionários</legend>
								<a tal:attributes="href string:${context/portal_url|nothing}/myvindulaprefs?newuser=''"><strong>Clique aqui</strong></a>
									<span>para adicionar novo funcionário</span>
							</fieldset>
		        		</div>
						<div id="busca">
		        			<fieldset>
		        				<legend>Buscar Usuários</legend>
								<!--tal:cont condition="context/@@myvindula-conf-userpanel/config_muit_user"-->
									<form action="/myvindulamanagealluser" method="post" id="portlet-ramais">
										<div style="float: left; padding-right: 5px;">
											<label>Nome:</label>
											<input type="text" name="title" size="26" tal:attributes="value python: request.get('title', '')"/>	
										</div>
								    	
										<div style="float:left;"> 
											<input type="submit" name="SearchSubmit" value="Buscar" class="context" i18n:attributes="value"/>
											<!--input type="submit" name="all" value="Listar Tudos os usuários" class="context" i18n:attributes="value"/-->
										</div>
						     	 	</form>	
								<!--/tal:cont-->
							</fieldset>
		        		</div>
						<div class="visualClear"></div>
						<div tal:condition="form_data" class="all-users">						
			          		<tal:def define="batch python:Batch(form_data, b_size, int(b_start));">
					            <div class="user"  tal:repeat="item batch">
                                    <!-- Dados para utilização da macro -->                                     
                                    <tal:def define="size_img string:90px;
                                                     principal_name python: view_listall.checaValor(item.get('name'),item.get('username',''));
                                                     details python: [];
                                                     view_manage python:True">
                                        <div metal:use-macro="context/myvindula-imageprofiles-macro/macros/userprofiles" />       
                                    </tal:def>
    								
								</div>
								<div class="visualClear"></div>
								<div class="navigation-users">
                                    <div metal:use-macro="here/batch_macros/macros/navigation"> </div>
                                </div>
                            </tal:def>
						</div>
						<div tal:condition="not: form_data">
							<br>
							<h3 tal:content="view_listall/check_no_result">N&atilde;o h&aacute; resultados.</h3>
						</div>
						
						
		        	</div>
				</div>
	  	</div>    
  </body>
</html>